<!DOCTYPE html>
<html>
<head>
  <%- include('../partials/head') %>
    <script src="https://connect.soundcloud.com/sdk/sdk-3.0.0.js"></script>

</head>
<body>
  <%- include('../partials/header', {subHeading: 'Welcome'}) %>

  <main>
    <ul>
      <li><a href="/users">Visit the user list.</a></li>
    </ul>
    <p>HELLO</p>
    <ul class="right">
      <% if (user) { %>
      <li><a href="/auth/logout">Logout</a></li>
      <li><%= user.soundcloud_username %></li>
      <li>playlists<%= user.playlists %></li>
      <% } else { %>
      <li><a href="/auth/soundcloud">Login with Soundcloud</a></li>
      <% } %>
    </ul>
  </main>

  <%- include('../partials/scripts') %>
</body>
</html>
